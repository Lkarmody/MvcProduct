@model UserInterface.ViewModels.SimpleViewModel
@{
    ViewData["Title"] = "Display Item";
}

<h2>Display Item</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@if (Model == null)
{
    <p>No item has been created yet. <a asp-action="Create">Create one</a>.</p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Contact Email</dt>
        <dd class="col-sm-10">@Model.ContactEmail</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>

    <a class="btn btn-secondary" asp-action="Edit">Edit</a>
    <a class="btn btn-link" asp-action="Create">Create New</a>
}